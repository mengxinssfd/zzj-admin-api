{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@/*": ["src/*"],
      "core/*": ["core/src/*"],
      "entity/*": ["core/src/entity/*"],
      "interface/*": ["core/src/models/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
