{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@/*": ["src/*"],
      "core/*": ["src/core/*"],
      "entity/*": ["src/core/entity/*"],
      "interface/*": ["src/core/models/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
